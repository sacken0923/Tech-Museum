.login-field
  %h2.login-head ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field_main
      .field
        = fa_icon "user",class:"login-icon"
        = f.text_field :nickname, placeholder: "ニックネーム"
      .field
        = fa_icon "envelope",class:"login-icon"
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .field
        - if @minimum_password_length
          -# %em
          -#   (#{@minimum_password_length} characters minimum)
        = fa_icon "key",class:"login-icon"
        = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
    -# - if devise_mapping.rememberable?
    -#   -# .field
    -#   -#   = f.check_box :remember_me
    -#   -#   = f.label :remember_me
    .actions
      = f.submit "ログイン"
  -# = render "devise/shared/links"
